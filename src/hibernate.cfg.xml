<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-configuration PUBLIC
"-//Hibernate/Hibernate Configuration DTD 3.0//EN"
"http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory>
        <property name="hibernate.bytecode.use_reflection_optimizer">false</property>
        <property name="hibernate.connection.driver_class">org.gjt.mm.mysql.Driver</property>
        <property name="hibernate.connection.url">jdbc:mysql://localhost/swengdb</property>
        <property name="hibernate.connection.username">root</property>
        <property name="hibernate.dialect">org.hibernate.dialect.MySQLInnoDBDialect</property>
        <property name="hibernate.search.autoregister_listeners">false</property>
        <property name="hibernate.show_sql">true</property>
        <property name="hibernate.validator.apply_to_ddl">false</property>
        <mapping resource="it/unisalento/SWEng_project/domain/Location.hbm.xml" />
        <mapping resource="it/unisalento/SWEng_project/domain/TypeOfProduct.hbm.xml" />
        <mapping resource="it/unisalento/SWEng_project/domain/Sells.hbm.xml" />
        <mapping resource="it/unisalento/SWEng_project/domain/Category.hbm.xml" />
        <mapping resource="it/unisalento/SWEng_project/domain/ProductPhoto.hbm.xml" />
        <mapping resource="it/unisalento/SWEng_project/domain/Shipment.hbm.xml" />
        <mapping resource="it/unisalento/SWEng_project/domain/User.hbm.xml" />
        <mapping resource="it/unisalento/SWEng_project/domain/Order.hbm.xml" />
        <mapping resource="it/unisalento/SWEng_project/domain/Product.hbm.xml" />
        <mapping resource="it/unisalento/SWEng_project/domain/Includes.hbm.xml" />
        <mapping resource="it/unisalento/SWEng_project/domain/Device.hbm.xml" />
        <mapping resource="it/unisalento/SWEng_project/domain/Shop.hbm.xml" />
    </session-factory>
</hibernate-configuration>
