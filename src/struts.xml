<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC
    "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
    "http://struts.apache.org/dtds/struts-2.0.dtd">
<struts>
	<constant name="struts.devMode" value="true" />
	<constant name="struts.i18n.reload" value="false" />
	<constant name="struts.configuration.xml.reload" value="false" />

	<package name="default" extends="struts-default">
		<result-types>
			<result-type name="tiles"	class="org.apache.struts2.views.tiles.TilesResult" />
		</result-types>
		
		<interceptors>
			<interceptor name="myInterceptor" class="it.unisalento.SWEng_project.interceptors.MyInterceptor" />
			<interceptor-stack name="mystack">
				<interceptor-ref name="myInterceptor">
					<param name="parametro">Parametro passato</param>
				</interceptor-ref>
				<interceptor-ref name="timer" />
				<interceptor-ref name="defaultStack">
<!-- 					per il momento commento questo interceptor per i problemi di sicurezza di sessionAware <param name="params.excludeParams">dojo\..*,^struts\..*,^session\..*,^request\..*,^application\..*,^servlet(Request|Response)\..*,parameters\...*</param> -->
				</interceptor-ref>
			</interceptor-stack>
			
			<interceptor name="LoginInterceptor" class="it.unisalento.SWEng_project.interceptors.LoginInterceptor" />
			<interceptor-stack name="loginStack">
				<interceptor-ref name="LoginInterceptor">
					<!-- <param name="parametro">Parametro passato</param> -->
				</interceptor-ref>
				<interceptor-ref name="timer" />
				<interceptor-ref name="defaultStack">
					<!-- per il momento commento questo interceptor per i problemi di sicurezza di sessionAware <param name="params.excludeParams">dojo\..*,^struts\..*,^session\..*,^request\..*,^application\..*,^servlet(Request|Response)\..*,parameters\...*</param> -->
				</interceptor-ref>
			</interceptor-stack>
		</interceptors>

		<default-action-ref name="index" />
		
		<global-results>
			<result name="login" type="redirect">/loginUser.action</result>
		</global-results>
		
		<action name="index">
			<result type="tiles">index</result>
		</action>
		<action name="profile">
			<result type="tiles">profile</result>
		</action>
		<action name="registrationUser">
			<result type="tiles">registrationUser</result>
		</action>
		<action name="registrationShop">
			<result type="tiles">registrationShop</result>
		</action>
		<action name="loginUser">
			<result type="tiles">login</result>
		</action>
		<action name="logoutUser" class="it.unisalento.SWEng_project.actions.Logout">
		    <result name="success" type="tiles">index</result>
		</action>
		
		<action name="myshops">
			<result type="tiles">myshops</result>
		</action>
		<action name="ShopDetails">
			<result type="tiles">shopdetails</result>
		</action>
		<action name="mylocations">
			<result type="tiles">mylocations</result>
		</action>
		
		<action name="UpdateShop" class="it.unisalento.SWEng_project.actions.UpdateShop">
			<interceptor-ref name="mystack" />
			<result name="success" type="tiles">myshops</result>
			<result name="error" type="tiles">error</result>
			<result name="input" type="tiles">shopdetails</result>
		</action>
		
		<action name="AddShop" class="it.unisalento.SWEng_project.actions.AddShop">
			<interceptor-ref name="mystack" />
			<result name="success" type="tiles">myshops</result>
			<result name="error" type="tiles">error</result>
			<result name="input" type="tiles">shopdetails</result>
		</action>
		
		<action name="AddUser" class="it.unisalento.SWEng_project.actions.AddUser">
			<interceptor-ref name="mystack" />
			<result name="success" type="tiles">index</result>
			<result name="error" type="tiles">error</result>
			<result name="input" type="tiles">registrationUser</result>
		</action>
		
		<action name="Login" class="it.unisalento.SWEng_project.actions.Login">
			<interceptor-ref name="mystack" />
			<result name="success" type="tiles">index</result>
			<result name="error" type="tiles">error</result>
			<result name="input" type="tiles">login</result>
		</action>
		
	</package>

</struts>
