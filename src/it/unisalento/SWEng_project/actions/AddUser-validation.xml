<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE validators PUBLIC "-//Apache Struts//XWork Validator 1.0.3//EN"
 "http://struts.apache.org/dtds/xwork-validator-1.0.3.dtd">

 <validators>
     <field name="ssn">
         <field-validator type="regex">
            <param name="regex">^[A-Za-z]{6}[0-9]{2}[A-Za-z]{1}[0-9]{2}[A-Za-z]{1}[0-9]{3}[A-Za-z]{1}$</param>
            <message>Formato CF non corretto</message>
         </field-validator>
     </field>
     <field name="username">
         <field-validator type="requiredstring">
             <message>Username richiesta</message>
         </field-validator>
     </field>
     <field name="password">
         <field-validator type="requiredstring">
             <message>Password richiesta</message>
         </field-validator>
     </field>
     <field name="confirm_password">
         <field-validator type="requiredstring">
             <message>Conferma della password richiesta</message>
         </field-validator>   
     </field>
     <field name="name">
         <field-validator type="requiredstring">
             <message>Nome richiesto</message>
         </field-validator>
     </field>
     <field name="surname">
         <field-validator type="requiredstring">
             <message>Cognome richiesto</message>
         </field-validator>
     </field>
     <field name="dateOfBirth">
         <field-validator type="required">
             <message>Data di nascita richiesta</message>
         </field-validator>
     </field>
     <field name="email">
         <field-validator type="requiredstring">
             <message>Email richiesta</message>
         </field-validator>
         <field-validator type="email">
             <message>Formato email non corretto</message>
         </field-validator>
     </field>
     <field name="tel">
         <field-validator type="regex">
            <param name="regex">0[0-9]{9}</param>
            <message>Formato Telefono non corretto</message>
         </field-validator>
     </field>
     <field name="cell">
         <field-validator type="regex">
            <param name="regex">3[0-9]{9}</param>
            <message>Formato Telefono non corretto</message>
         </field-validator>
     </field>
 </validators>